<script>
    function showActive(link) {
        console.log();

        let active = document.querySelector(".link-label .active")
        let link_to_active = document.querySelector(".link-label[data-tag='" + link + "']")

        if (link_to_active != null) {

            if (active != null)
                active.classList.remove("active")
            link_to_active.classList.add("active")
        }


    }

    function showConnection() {

        document.querySelector(".modal").classList.add("active")
        document.querySelector(".mask").classList.add("active")
    }

    function classToggle() {
        const navs = document.querySelectorAll('.Navbar__Items')
        const burger = document.querySelector(".burger")

        if (burger.attributes.toggle.textContent == "false") {
            burger.attributes.toggle.textContent = "true"
            burger.src = burger.src.split("/").splice(0, 5).join("/") + "/cross.png"
        } else {
            burger.attributes.toggle.textContent = "false"
            burger.src = burger.src.split("/").splice(0, 5).join("/") + "/menu.png"
        }
        navs.forEach(nav => nav.classList.toggle('Navbar__ToggleShow'))
    }

    document.querySelector('.Navbar__Link-toggle')
        .addEventListener('click', classToggle)
</script>

